<thead class="jobs-table__header">
  <tr>
    <th>Queue</th>
    <th>Worker</th>
    <th>Att.</th>
    <th>Started</th>
  </tr>
</thead>

<tbody>
  <%= for job <- @jobs do %>
    <tr>
      <td class="jobs-column--queue">
        <span class="queue-tag <%= queue_class(job.queue) %>"><%= job.queue %></span>
      </td>
      <td class="jobs-column--details">
        <span class="job-details--worker"><%= job.worker %></span>
        <span class="job-details--args"><%= job_args(job.args) %></span>
      </td>
      <td class="jobs-column--attempts"><%= job.attempt %> ‚ÅÑ <%= job.max_attempts %></td>
      <td class="jobs-column--duration"><%= time_ago_in_words(job.relative_attempted_at) %> ago</td>
      <td class="jobs-column--action">
        <button class="btn--icon btn--destructive" phx-click="kill_job" value="<%= job.id %>" name="kill" title="Kill Job">
          <svg class="icon" viewBox="0 0 25 25" xmlns="http://www.w3.org/2000/svg">
            <g>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" x1="8" x2="17" y1="17" y2="8"></line>
            <line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" x1="17" x2="8" y1="17" y2="8"></line>
            </g>
          </svg>
        </button>
      </td>
    </tr>
  <% end %>
</tbody>
